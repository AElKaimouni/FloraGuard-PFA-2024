<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FloraGuardPFA2024" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="materialButtonStyle">@style/green_btn</item>
        <item name="editTextStyle">@style/transparent_input</item>
    </style>

    <style name="green_btn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/green_btn_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomCardViewStyle" >
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>


    <style name="img">
        <item name="background">@drawable/img_background</item>
    </style>

    <style name="transparent_input" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.FloraGuardPFA2024" parent="Base.Theme.FloraGuardPFA2024" />
</resources>